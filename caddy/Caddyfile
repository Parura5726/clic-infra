https://clic.epfl.ch {
	handle_path /nextcloud* {
		header {
			Strict-Transport-Security max-age=31536000;
		}

		reverse_proxy http://localhost:8005
	}

	handle /.well-known {
		redir /.well-known/carddav /nextcloud/remote.php/dav/ permanent
		redir /.well-known/caldav /nextcloud/remote.php/dav/ permanent
	}

	reverse_proxy /clicketing/api* http://localhost:8006
	reverse_proxy /clicketing* http://localhost:8007

	reverse_proxy /mattermost* http://localhost:8004

	redir /armoire /armoire/ permanent
	reverse_proxy /armoire/* http://localhost:8003

	handle_path /bookstack* {
		reverse_proxy http://localhost:8002
	}

	handle_path /directus* {
		reverse_proxy http://localhost:8001
	}

	reverse_proxy /dev* http://localhost:8008

	reverse_proxy /* http://localhost:8000

	redir /wiki* https://clic.epfl.ch:8443/
}

https://clic.epfl.ch:9980 {
	reverse_proxy http://collabora:9980
}

